<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>

    <!-- Android 12+ : niente backup cloud -->
    <cloud-backup>
        <exclude domain="root" />
        <exclude domain="sharedpref" />
        <exclude domain="database" />
        <exclude domain="files" />
        <exclude domain="cache" />
    </cloud-backup>

    <!-- Trasferimento dati su nuovo dispositivo -->
    <device-transfer>
        <exclude domain="root" />
        <exclude domain="sharedpref" />
        <exclude domain="database" />
        <exclude domain="files" />
        <exclude domain="cache" />
    </device-transfer>

</data-extraction-rules>
